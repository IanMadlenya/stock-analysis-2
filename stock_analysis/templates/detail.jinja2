{% extends "layout.jinja2" %}

{% block body %}

  <a href="{{ request.route_url('home') }}">Home</a>
  <a href="{{ request.route_url('portfolio') }}">View Portfolio</a>

  <form method="POST">
    <div class="form-group">
      <label>Enter Stock Ticker:</label>
      <input name="stock_ticker" required></input>
    </div>

    {% if error %} 

      <div class="no_ticker_popup">
        <p> {{ error }} </p>
      </div>

    {% endif %} 


    <div class="form-group">
      <div class="submit-button">
        <input type="submit"></input>
      </div>
    </div>
  </form>

  {{ div|safe }}
  {{ script|safe }}

{% endblock body %}
