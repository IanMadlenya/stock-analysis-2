{% extends "layout.jinja2" %}

{% block body %}
<header>
    <h1>Stock Analysis</h1>
    <div class="icon-menu"></div>
</header>

<form class="search-form" method="POST">
  <input name="stock_ticker" type="text" class="form-input" placeholder="Enter a stock:" required>

  {% if error %} 
    <div class="no_ticker_popup">
      <p> {{ error }} </p>
    </div>
  {% endif %} 

  <input name="search-button" type="submit" value="Search">
</form>


{{ div|safe }}
{{ script|safe }}

{% endblock body %}
