{% extends "layout.jinja2" %}

{% block head %}
<link rel="stylesheet" type="text/css" href="{{ request.static_path('stock_analysis:static/src/style/main.css') }}">
{% endblock head%}

{% block body %}
<div class="form-header">
    <h1 class="form-title">Stock Analysis</h1>

    <div class="sign-up">
        <form name="signup" method="POST">
            <input name="username" type="text" class="form-input" placeholder="User Name" required>
            <input name="password" type="password" class="form-input" placeholder="Password" required>
            <input name="register" type="submit" value="SIGN UP">
        </form>
    </div>
</div>
{% endblock %}