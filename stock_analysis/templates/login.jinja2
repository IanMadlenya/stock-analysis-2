{% extends "layout.jinja2" %}

{% block head %}
<link rel="stylesheet" type="text/css" href="{{ request.static_path('stock_analysis:static/src/style/main.css') }}">
<link rel="stylesheet" type="text/css" href="{{ request.static_path('stock_analysis:static/src/style/link.css') }}">
{% endblock head%}

{% block body %}
<div class="form-header">
    <h1 class="form-title"><a href={{ request.route_url('home') }}>Stock Analysis</a></h1>

    {% if error %}
    <p style="color: red">{{ error }}</p>
    {% endif %}

    {% if error %}
        <div class="alert alert-warning" role="alert">
          <h4 class="alert-heading" style="font-size: 1em">Error</h4>
          <hr>
          <p class="mb-0" style="font-size: 1em">{{ error }}</p>
        </div>
    {% endif %}

    <div class="login">
        <form name="login" method="POST">
            <input name="username" type="text" class="form-input" placeholder="User Name" required>
            <input name="password" type="password" class="form-input" placeholder="Password" required>
            <input name="login" type="submit" value="LOGIN">
        </form>
    </div>
</div>
{% endblock body %}
